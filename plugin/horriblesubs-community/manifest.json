{

  "manifest_version": 2,
  "name": "HorribleSubs Community",
  "description": "Disponibiliza para download as legendas dos episódios traduzidas automaticamente. Plugin não oficial feito por fã.",
  "version": "0.3",

  "icons": {
    "48": "icons/icon.png"
  },

  "permissions": [
    "https://horriblesubs-community.herokuapp.com/*"
 ],


  "content_scripts": [
    {
      "js": ["background.js"],
      "matches": ["*://horriblesubs.info/shows*"],
      "match_about_blank": false,
      "all_frames": false,
      "run_at": "document_idle"
    }
  ]

}
